include ../../blocks/text-field/text-field.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Form Elements

  body
    .logo
      a(href="#")
        

    block content
      .container
        .left-column
          +text-field('email', 'Text field', 'Email')
          span Default

          +text-field('text', 'Text field', 'This is pretty awesome')
          span Hover/Focus
          
          +select-field('Dropdown', 'Сколько гостей', 'Взрослые', 'Подростки', 'Дети')
          span Default

          +text-field('text', 'Masked text field', 'ДД.ММ.ГГГГ')
          span Default

          +text-field('date', 'Date dropdown', 'ДД.ММ.ГГГГ')
          span Default

          +text-field('date', 'Date dropdown', '19.08.2019')
          span Default

        .center
        .right-column