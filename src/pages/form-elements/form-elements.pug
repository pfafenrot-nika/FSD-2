include ../../blocks/utils/mixins
include ../../blocks/text-field/text-field
include ../../blocks/dropdown/dropdown
include ../../blocks/text-picture/text-picture
include ../../blocks/checkbox-list/checkbox
include ../../blocks/radiobutton/radio
include ../../blocks/toggle/toggle
include ../../blocks/like-button/like
include ../../blocks/rate/rate

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    title Form Elements

  body
    .logo
      a(href="../index.html")
        

    block content
      .container.form-elements
        .left-column
          +text-field('email', ' ', 'Text field', 'Email', 'Default')

          +text-field('text', ' ', 'Text field', 'This is pretty awesome', 'Hover/Focus')
          
          // class .expand_more
          //+select-field('Dropdown', 'Сколько гостей')
           +option(
            option(selected disabled)= placehol
            -var ourt = ['Взрослые', 'Дети', 'Подростки']
            - for (var i = 0; i <= ourt.length - 1; i++) {
              option(value= ourt[i])= ourt[i]
            - }
           )
            span Default

          +text-field('text', ' ', 'Masked text field', 'ДД.ММ.ГГГГ', 'Default')

          +text-field('date', ' ', 'Date dropdown', 'ДД.ММ.ГГГГ', '')

          +text-field('date', ' ', 'Date dropdown', '19.08.2019', '')

          +text-field('date', ' ', 'Filter date dropdown', '19 авг - 23 авг', '')

          +text-field('email', 'arrow_forward', 'Subscription text field', 'Email', '')
          
          +text-picture('#', 'Комфорт', 'Шумопоглощающие стены', 'comfort')

        .center
          +text-field('email', ' ', 'Text field', 'Email', 'Default')

          ul.checkbox-list.fieldName checkbox buttons
            +checkbox-item('Можно курить')
            +checkbox-item('Можно с питомцами', 'checked')
            +checkbox-item('Можно пригласить гостей (до 10 человек)', 'checked')

          ul.radiobutton-list.fieldName radio buttons
            +radio-item('Мужчина', 'Gender', 'checked')
            +radio-item('Женщина', 'Gender')

          ul.toggle-list.fieldName toggle
            +toggle-item('Получать спецпредложения', 'toggle-1')
            +toggle-item('Получать спецпредложения', 'toggle-2')
          
          .block-like
            span.fieldName like button
            .block-like__item
              +like('2')
            .block-like__item
              +like('12', 'active')
          
          .block-rate
            span.fieldName rate button
            .rating-area
              +rate-star("star-5", "5", "Оценка 5")
              +rate-star("star-4", "4", "Оценка 4")
              +rate-star("star-3", "3", "Оценка 3")
              +rate-star("star-2", "2", "Оценка 2")
              +rate-star("star-1", "1", "Оценка 1")
            
            .rating-area.rating-area-2
              +rate-star("star-2.5", "5", "Оценка 5")
              +rate-star("star-2.4", "4", "Оценка 4")
              +rate-star("star-2.3", "3", "Оценка 3")
              +rate-star("star-2.2", "2", "Оценка 2")
              +rate-star("star-2.1", "1", "Оценка 1")
          
        .right-column
          +text-field('text', 'label', 'Text field', 'This is pretty awesome', 'Hover/Focus')